---
import ProductDetail from '../../components/ProductDetail.vue'
import Layout from '../../layouts/Layout.astro'

export async function getStaticPaths() {
    const response = await fetch('http://php-api-ecommerce.vercel.app/php-api-ecommerce/product/get_products.php')
    const result = await response.json()
    const products = result.data ?? []

    return products.map((product: { ID: number }) => ({
        params: { id: String(product.ID) }
    }))
}

const { id } = Astro.params
---

<Layout>
    <main class="max-w-4xl mx-auto md:container flex flex-col items-center p-4 md:px-16">
        <ProductDetail client:load id={id} />
    </main>
</Layout>